- if @show.errors.any?
  #error_explanation
    %h2= "#{pluralize(@show.errors.count, "error")} prohibited this show from being saved:"
    %ul
      - @show.errors.full_messages.each do |message|
        %li= message

= bootstrap_form_for @show do |f|
  = f.text_field :name
  = f.url_field :link
  = f.datetime_local_field :time
  = f.text_field :location
  = f.number_field :tickets
  = f.number_field :price
  = f.number_field :industry_price
  = f.select :theater_id, current_user.theaters.map { |t| [t.name, t.id]}
  = f.submit 'Save'
