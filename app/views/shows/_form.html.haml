= form_for @show do |f|
  - if @show.errors.any?
    #error_explanation
      %h2= "#{pluralize(@show.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - @show.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :time
    = f.text_field :time
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :tickets
    = f.number_field :tickets
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit 'Save'
