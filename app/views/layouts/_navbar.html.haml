.container
  %nav.navbar
    .navbar-brand
      %a.navbar-item{href: "#"}
        %h1 Pack the House
      .navbar-burger.burger{"data-target" => "main-nav"}
        %span
        %span
        %span
    #main-nav.navbar-menu
      .navbar-start
        = link_to root_url, class: 'navbar-item' do
          %span.icon
            %i.far.fa-gem
          %span Home
        = link_to home_about_url, class: 'navbar-item' do
          %span.icon
            %i.far.fa-star
          %span About
        - if user_signed_in?
          = link_to destroy_user_session_path, class: 'navbar-item' do
            %span.icon
              %i.far.fa-star
            %span Logout
        - else
          = link_to new_user_session_path, class: 'navbar-item' do
            %span.icon
              %i.far.fa-star
            %span Login
